# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.md text eol=lf
*.txt text eol=lf
*.py text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Batch files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.exe binary
*.gif binary
*.png binary
*.jpg binary
*.jpeg binary
*.ico binary
*.pdf binary
*.zip binary
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary

# Spec files (PyInstaller)
*.spec text eol=lf
